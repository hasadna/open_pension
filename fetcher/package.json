{
  "name": "fetcher",
  "version": "0.0.1",
  "description": "Fetcher for open pension platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -r tsconfig-paths/register",
    "dev": "nodemon -L",
    "start": "node ./dist/server.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint-fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "test": "jest"
  },
  "author": "http://www.hasadna.org.il/",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.573.0",
    "axios": "~0.19.0",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.5"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.14",
    "@types/node": "^12.12.8",
    "jest": "^23.6.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.3.3333"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
