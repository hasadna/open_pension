{
  "name": "fetcher",
  "version": "0.0.1",
  "description": "Fetcher for open pension platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -L",
    "start": "node ./dist/src/server.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint-fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "test": "jest"
  },
  "author": "http://www.hasadna.org.il/",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/storage": "^4.1.3",
    "axios": "~0.21.1",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "kafka-node": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "type-graphql": "^0.17.6"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.14",
    "@types/node": "^12.12.8",
    "@types/request": "^2.48.4",
    "wait-for-expect": "^3.0.2",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.3.3333"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
